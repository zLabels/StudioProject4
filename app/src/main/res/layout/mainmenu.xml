<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/main_page"
    android:orientation="vertical"
    tools:context=".Mainmenu">

    <Button
        android:id = "@+id/btn_play"
        android:layout_width="350dp"
        android:layout_height="257dp"
        android:background="@drawable/play_button"
        android:layout_marginTop="190dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id = "@+id/btn_options"
        android:layout_width="350dp"
        android:layout_height="171dp"
        android:background="@drawable/options_button"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="210dp"/>

    <Button
        android:id = "@+id/btn_credits"
        android:layout_width="350dp"
        android:layout_height="182dp"
        android:background="@drawable/credits_button"
        android:layout_marginTop="700dp"
        android:layout_marginLeft="200dp"/>

    <Button
        android:id = "@+id/btn_highscore"
        android:layout_width="350dp"
        android:layout_height="182dp"
        android:background="@drawable/highscore_button"
        android:layout_marginTop="910dp"
        android:layout_marginLeft="210dp"/>
</RelativeLayout>
