<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/highscore_page"
    android:orientation="vertical">

    <Button
        android:id = "@+id/btn_highscoreback"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:background="@drawable/levelback_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:id="@+id/imageView"
        android:background="#ffffff"
        android:layout_marginTop="164dp"
        android:layout_below="@+id/btn_highscoreback"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/tv_score1"
        android:layout_gravity ="start"
        android:textAlignment="textStart"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="37dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/btn_highscoreback"
        android:layout_toEndOf="@+id/btn_highscoreback"
        android:layout_marginStart="19dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/tv_score2"
        android:layout_gravity ="start"
        android:textAlignment="textStart"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_above="@+id/tv_score3"
        android:layout_alignLeft="@+id/tv_score3"
        android:layout_alignStart="@+id/tv_score3"
        android:layout_marginBottom="29dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/tv_score3"
        android:layout_gravity ="start"
        android:textAlignment="textStart"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_above="@+id/tv_score4"
        android:layout_alignLeft="@+id/tv_score1"
        android:layout_alignStart="@+id/tv_score1"
        android:layout_marginBottom="39dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/tv_score4"
        android:layout_gravity ="start"
        android:textAlignment="textStart"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_above="@+id/tv_score5"
        android:layout_alignLeft="@+id/tv_score5"
        android:layout_alignStart="@+id/tv_score5"
        android:layout_marginBottom="25dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/tv_score5"
        android:layout_gravity ="start"
        android:textAlignment="textStart"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/tv_score3"
        android:layout_alignStart="@+id/tv_score3"
        android:layout_marginBottom="32dp" />

</RelativeLayout>