<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/options_page"
    android:orientation="vertical">

    <Button
        android:id = "@+id/btn_optionsback"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:background="@drawable/levelback_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp" />

    <SeekBar
        android:id="@+id/sb_backgroundMusicSeekbar"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="1"
        android:progressDrawable="@android:color/black"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/tv_backgroundMusic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:id="@+id/tv_backgroundMusic"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="238dp"
        android:layout_below="@+id/btn_optionsback"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:id="@+id/sb_sfxSoundSeekbar"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="1"
        android:progressDrawable="@android:color/black"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/tv_sfxSound"
        android:layout_alignLeft="@+id/sb_backgroundMusicSeekbar"
        android:layout_alignStart="@+id/sb_backgroundMusicSeekbar" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/tv_sfxSound"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginTop="207dp"
        android:layout_below="@+id/sb_backgroundMusicSeekbar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>